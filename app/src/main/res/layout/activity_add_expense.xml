<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f1f2e"
    tools:context=".AddExpense">


    <TextView
        android:id="@+id/textView"
        android:layout_width="294dp"
        android:layout_height="72dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="64dp"
        android:background="#52527a "
        android:text="@string/add_expense"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/dateNewest"
        android:layout_width="216dp"
        android:layout_height="57dp"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="128dp"
        android:background="#9595b7"
        android:text="date" />

    <EditText
        android:id="@+id/editTextcategory"
        android:layout_width="212dp"
        android:layout_height="56dp"
        android:layout_below="@+id/dateNewest"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:autofillHints=""
        android:background="#9595b7"
        android:ems="10"
        android:hint="category"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextAmount1"
        android:layout_width="212dp"
        android:layout_height="56dp"
        android:layout_below="@+id/editTextcategory"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="31dp"
        android:autofillHints=""
        android:background="#9595b7"
        android:ems="10"
        android:hint="Amount"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAmount1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="78dp"
        android:background="#52527a "
        android:text="Save" />

    <Button
        android:id="@+id/pickBtn"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/dateNewest"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="132dp"
        android:layout_marginRight="80dp"
        android:background="#52527a "
        android:text="Date picker" />


</RelativeLayout>

